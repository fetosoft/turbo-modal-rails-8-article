<div id="<%= dom_id post %>" class="container mx-auto px-4 py-8">
  <div class="border border-gray-300 rounded-lg p-6 bg-white shadow-md mb-6">
    <h1 class="text-3xl font-bold mb-6"><%= post.title %></h1>
    <div class="prose">
      <%= post.body %>
    </div>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Edit this post", edit_post_path(post), class: "text-blue-500 hover:underline", data: { turbo_frame: "modal" } %>
    <span class="text-gray-500">|</span>
    <%= link_to "Back to posts", posts_path, class: "text-blue-500 hover:underline" %>
    <%= button_to "Destroy this post", post, method: :delete, class: "bg-red-500 text-white font-semibold px-4 py-2 rounded-lg shadow hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400" %>
  </div>
</div>